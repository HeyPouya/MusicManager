<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MusicManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryVariant">@color/black_alpha_100</item>
        <item name="colorOnPrimary">@color/white_alpha_100</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_alpha_100</item>
        <item name="colorOnError">@color/red_400</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.MusicManager.CardView">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.MusicManager.Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.MusicManager.Text.Header" parent="Theme.MusicManager.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MusicManager.Text.Title" parent="Theme.MusicManager.Text.Header">
        <item name="android:textSize">16sp</item>
    </style>

</resources>